<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inbox</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>

    <h1>Inbox</h1>
    
    <form action="/messages/new" method="get">
        <button type="submit">Compose</button>
    </form>

    <% if (formattedMessages.length > 0) { %>
        <% formattedMessages.forEach(({ chatPartner, lastMessage }) => { %>
          <div>
            <a href="/messages/<%= chatPartner ? chatPartner._id : '' %>">
              <% if (chatPartner && chatPartner.profilePic) { %>
                <img src="<%= chatPartner.profilePic %>" width="40" />
              <% } %>
              <strong><%= chatPartner ? chatPartner.username : "Unknown User" %></strong>
            </a>
            <p><%= lastMessage.messageText %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p>No messages yet.</p>
      <% } %>

</body>
</html>