<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Followers of <%= profileUser.username %></title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>

    <h1>Followers of <%= profileUser.username %></h1>

    <% if (profileUser.followers.length > 0) { %>
        <% profileUser.followers.forEach(follower => { %>
            <div>
                <% if (follower.profilePic) { %>
                    <img src="<%= follower.profilePic %>" alt="Profile Picture" width="50">
                <% } %>
                <p><a href="/users/<%= follower._id %>"><%= follower.username %></a></p>
            </div>
        <% }) %>
    <% } else { %>
        <p><%= profileUser.username %> has no followers yet.</p>
    <% } %>
</body>
</html>
