<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Following - <%= profileUser.username %></title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>

    <h1><%= profileUser.username %> Follows</h1>

    <% if (profileUser.following && profileUser.following.length > 0) { %>
        <% profileUser.following.forEach(followedUser => { %>
            <div>
                <% if (followedUser.profilePic) { %>
                    <img src="<%= followedUser.profilePic %>" alt="Profile Picture" width="50">
                <% } %>
                <p><a href="/users/<%= followedUser._id %>"><%= followedUser.username %></a></p>
            </div>
        <% }) %>
    <% } else { %>
        <p><%= profileUser.username %> is not following anyone yet.</p>
    <% } %>
</body>
</html>